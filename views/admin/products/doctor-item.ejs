<article class="product-item">
  <div class="product-item-content">
    <h2><%= doctor.name %></h2>
    <h3><%=doctor.specialization %></h3>
    <div class="product-item-actions">
      <% if (locals.isAdmin) { %>
        <a class="btn btn-alt" href="/admin/doctors/meetings/<%= doctor._id %>">View Meetings</a>
        <button class="btn btn-alt" data-doctorid="<%= doctor._id %>" data-csrf="<%= locals.csrfToken %>">Delete</button>
      <% } else { %>
        <a class="btn btn-alt" href="/meetings/<%= doctor._id %>">View Details</a>
      <% } %>
    </div>
  </div>
</article>